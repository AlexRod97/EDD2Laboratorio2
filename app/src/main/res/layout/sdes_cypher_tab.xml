<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tViewInputRSA"
        android:layout_width="329dp"
        android:layout_height="68dp"
        android:layout_alignEnd="@+id/etP"
        android:layout_alignParentTop="true"
        android:layout_marginTop="139dp"
        android:layout_marginEnd="-6dp"
        android:text="TextView" />

    <Button
        android:id="@+id/btnCifrarRSA"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/etP"
        android:layout_alignStart="@+id/tViewInputRSA"
        android:text="Cifrar" />

    <EditText
        android:id="@+id/etP"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tViewOutputRSA"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="209dp"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/tViewOutputRSA"
        android:layout_width="323dp"
        android:layout_height="181dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="TextView" />

    <Button
        android:id="@+id/btnReadFileSDES"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="Buscar documento" />

    <TextView
        android:id="@+id/lblP"
        android:layout_width="137dp"
        android:layout_height="30dp"
        android:layout_above="@+id/btnCifrarRSA"
        android:layout_alignStart="@+id/etP"
        android:text="Llave para cifrar:" />
</RelativeLayout>